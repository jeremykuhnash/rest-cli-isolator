apiVersion: "v1"
kind: Pod
metadata:
  name: provisioning-portal
  labels:
    app: provisioning-portal
spec:
  containers:
    - name: nonprod-cli
      image: jeremykuhnash/cli-worker:latest
      env:
        - name: "CLI_COMMAND"
          value: "/usr/bin/ccloud"
        - name: "USERNAME"
          value: ""
        - name: "PASSWORD"
          value: ""
        - name: "SERVER_PORT"
          value: "8080"
      ports:
        - containerPort: 8080
          name: nonprod-cli
          protocol: TCP
      resources:
        requests:
          memory: "64Mi"
          cpu: "250m"
        limits:
          memory: "128Mi"
          cpu: "500m"
    - name: prod-cli
      image: jeremykuhnash/cli-worker:latest
      env:       
        - name: "CLI_COMMAND"
          value: "/usr/bin/ccloud"
        - name: "USERNAME"
          value: ""
        - name: "PASSWORD"
          value: ""
        - name: "SERVER_PORT"
          value: "8081"
      ports:
        - containerPort: 8081
          name: prod-cli
          protocol: TCP
      resources:
        requests:
          memory: "64Mi"
          cpu: "250m"
        limits:
          memory: "128Mi"
          cpu: "500m"